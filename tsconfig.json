{
  "compilerOptions": {
    "outDir": "build",
    "module": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "typeRoots": [ "node_modules/@types" ],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "lib":[
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "esnext.asynciterable",
      "es2017.object"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "useTranspileModule": true
  },
  "include": [
    "src/**/*",
    "node_modules/@types",
    "typings/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/typescript/lib/lib.es2015.promise.d.ts"
  ]
}
